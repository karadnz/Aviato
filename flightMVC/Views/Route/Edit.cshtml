@model flightMVC.Models.Route

@{
    ViewData["Title"] = "Edit Route";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="DepartureAirportId" class="control-label"></label>
                <select asp-for="DepartureAirportId" asp-items="ViewBag.DepartureAirportId" class="form-control"></select>
                <span asp-validation-for="DepartureAirportId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ArrivalAirportId" class="control-label"></label>
                <select asp-for="ArrivalAirportId" asp-items="ViewBag.ArrivalAirportId" class="form-control"></select>
                <span asp-validation-for="ArrivalAirportId" class="text-danger"></span>
            </div>

            <!-- New form group for RouteCode -->
            <div class="form-group">
                <label asp-for="RouteCode" class="control-label"></label>
                <input asp-for="RouteCode" class="form-control" />
                <span asp-validation-for="RouteCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
