@{
    ViewData["Title"] = "Create New Route";
}
@model flightMVC.Models.Route

<h3 style="color:red;">@TempData["msj"]</h3>
<h4>Route</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DepartureAirportId" class="control-label">Departure Airport</label>
                <select asp-for="DepartureAirportId" asp-items="ViewBag.DepartureAirportId" class="form-control">
                    <option value="">-- Select Departure Airport --</option>
                </select>
                <span asp-validation-for="DepartureAirportId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ArrivalAirportId" class="control-label">Arrival Airport</label>
                <select asp-for="ArrivalAirportId" asp-items="ViewBag.ArrivalAirportId" class="form-control">
                    <option value="">-- Select Arrival Airport --</option>
                </select>
                <span asp-validation-for="ArrivalAirportId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RouteCode" class="control-label">Route Code</label>
                <input asp-for="RouteCode" class="form-control" />
                <span asp-validation-for="RouteCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
