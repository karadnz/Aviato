@model IEnumerable<flightMVC.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h2>My Bookings</h2>
<hr />

<div class="container mt-4">
    @if (!Model.Any())
    {
        <p>No bookings found.</p>
    }
    else
    {
        foreach (var booking in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Booking ID: @booking.Id</h5>
                    <p>Flight: @booking.Flight.Route.RouteCode</p>
                    <p>Aircraft: @booking.Flight.Aircraft.AircraftModel.Name by @booking.Flight.Aircraft.Company.Name</p>
                    <p>Seat Number: @booking.SeatNumber</p>
                    <p>Purchase Time: @booking.PurchaseTime.ToString("MM/dd/yyyy h:mm tt")</p>
                    <a href="@Url.Action("Details", "Home", new { id = booking.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        }
    }
</div>
