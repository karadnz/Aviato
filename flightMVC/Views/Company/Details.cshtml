@model flightMVC.Models.Company

@{
    ViewData["Title"] = "Company Details";
}

<h4>Details for the selected company</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
</div>

@if (Model.Aircrafts != null && Model.Aircrafts.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Aircraft Model ID</th>
                <th>Aircraft Model Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aircraft in Model.Aircrafts)
            {
                <tr>
                    <td>@aircraft.AircraftModelId</td>
                    <td>@aircraft.AircraftModel?.Name</td>
                    <td>@aircraft.AircraftModel?.Capacity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>This company does not have any aircrafts listed.</h4>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
