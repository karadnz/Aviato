@model flightMVC.ViewModels.AircraftDetailsViewModel

@{
    ViewData["Title"] = "Aircraft Details";
    var totalSeats = Model.AircraftModel.Capacity;
    var rows = (int)Math.Ceiling(totalSeats / 8.0);
}

<h2>Details for the Aircraft</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aircraft.AircraftName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aircraft.AircraftName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AircraftModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AircraftModel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AircraftModel.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AircraftModel.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.City)
        </dd>
    </dl>

    <!-- Render Plane Seats -->
    <!-- Seats Rendering -->
 

    <h2>Seat Layout Radio</h2>
    <!-- Seats Rendering -->
    <form class="aircraft-seats">
        @for (int row = 0; row < rows; row++)
        {
            <div class="seat-row">
                @for (int seat = 0; seat < 8; seat++)
                {
                    <label class="seat">
                        <input type="radio" name="selectedSeat" value="@($"{row}-{seat}")" />
                        <span class="seat-design"></span>
                    </label>
                    if (seat == 3) // Add corridor after the second seat
                    {
                        <div class="corridor"></div>
                    }
                }
            </div>
        }
        <input type="submit" value="Confirm Seat" />
    </form>


</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
