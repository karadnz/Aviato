@model flightMVC.Models.Aircraft

@{
    ViewData["Title"] = "Edit Aircraft";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="AircraftName" class="control-label"></label>
                <input asp-for="AircraftName" class="form-control" />
                <span asp-validation-for="AircraftName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AircraftModelId" class="control-label"></label>
                <select asp-for="AircraftModelId" asp-items="ViewBag.AircraftModelId" class="form-control"></select>
                <span asp-validation-for="AircraftModelId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" asp-items="ViewBag.CompanyId" class="form-control"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
